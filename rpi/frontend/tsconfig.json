{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "app",
    // https://github.com/Microsoft/TypeScript-Sublime-Plugin/issues/470
    "experimentalDecorators": true,
    // https://github.com/angular/angular/issues/14595
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}